{{ 'section-custom-hero-banner-slider.css' | asset_url | stylesheet_tag }}


{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{% endstyle %}

{% capture slider-options-data %}
  {
    "autoplay" : {{ section.settings.slider_autoplay }},
    "interval" : {{ section.settings.slider_autoplay_duration | times:1000 }},
    "type" : "{{ section.settings.slide_animation }}",
    "pagination" : {{ section.settings.slide_dots }},
    "arrows" : {{ section.settings.slide_arrows }},
    "rewind" : {{ section.settings.infinite_scroll }},
    "drag": {{ section.settings.slide_drag }}
  }
{% endcapture %}

<div class="hero-banner-slider padding-{{ section.id }}">
  <div class="page-width">
    <custom-slider>
      <section
        class="splide custom-border-radius"
        aria-label="Slide Show"
        data-slider-options='{{ slider-options-data }}'
      >
        <div class="splide__track">
          <ul class="splide__list">
            {% if section.blocks != blank %}
              {% for block in section.blocks %}
                <li class="splide__slide hero-banner-slider__slide">
                  <div class="hero-banner-slider__image-container custom-border-radius">
                    {% if block.settings.desktop_image != blank and block.settings.mobile_image != blank %}
                      {% render 'responsive-image',
                        desktopImage: block.settings.desktop_image,
                        mobileImage: block.settings.mobile_image
                      %}
                    {% else %}
                      {{ 'hero-apparel-1' | placeholder_svg_tag }}
                    {% endif %}
                  </div>
                  <div class="{{ block.settings.alignment_position }} hero-banner-slider__text-container">
                    <div class="hero-banner-slider_text {{ block.settings.text_alignment }} color-{{ block.settings.banner_color_scheme }}">
                      {% if block.settings.banner_caption != blank %}
                        <ul class="custom-caption">
                          <li class="h4 custom-caption__text">{{ block.settings.banner_caption }}</li>
                        </ul>
                      {% endif %}
                      {% if block.settings.banner_heading != blank %}
                        <div class="h1 hero-banner-slider_heading scroll-line-animation">
                          {{ block.settings.banner_heading }}
                        </div>
                      {% endif %}
                      {% if block.settings.banner_button_text != blank %}
                        <a
                          class="custom-button-primary"
                          {% if block.settings.banner_button_link == blank %}
                            role="link" aria-disabled="true"
                          {% else %}
                            href="{{ block.settings.banner_button_link }}"
                          {% endif %}
                        >
                          {{- block.settings.banner_button_text -}}
                        </a>
                      {% endif %}
                    </div>
                  </div>
                </li>
              {% endfor %}
            {% else %}
              {% for i in (1..3) %}
                <li class="splide__slide">
                  {{ 'hero-apparel-' | append: i | placeholder_svg_tag }}
                </li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>
      </section>
    </custom-slider>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner Slider",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "checkbox",
      "id": "slider_autoplay",
      "label": "Slide autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slide_dots",
      "label": "Show slide dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slide_arrows",
      "label": "Show slide arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "infinite_scroll",
      "label": "Infinite scroll",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slide_drag",
      "label": "Enable drag",
      "default": false
    },
    {
      "type": "select",
      "id": "slide_animation",
      "label": "Slide animation",
      "options": [
        {
          "value": "loop",
          "label": "Loop"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ]
    },
    {
      "type": "range",
      "id": "slider_autoplay_duration",
      "label": "Slider autoplay duration",
      "min": 1,
      "step": 1,
      "max": 10,
      "default": 3,
      "unit": "sec"
    },
    {
      "type": "header",
      "content": "Section padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Banner",
      "type": "banner",
      "settings": [
        {
          "type": "header",
          "content": "Image settings"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Image (Mobile)"
        },
        {
          "type": "header",
          "content": "Text content settings"
        },
        {
          "type": "text",
          "id": "banner_caption",
          "label": "Banner Caption",
          "default": "Women's Apparel"
        },
        {
          "type": "richtext",
          "id": "banner_heading",
          "label": "Banner Heading",
          "default": "<p> Elevate your wardrobe with our limited-time fashion offer! <p>"
        },
        {
          "type": "text",
          "id": "banner_button_text",
          "label": "Button text",
          "default": "Explore more"
        },
        {
          "type": "url",
          "id": "banner_button_link",
          "label": "Button Link"
        },
        {
          "type": "color_scheme",
          "id": "banner_color_scheme",
          "label": "Color scheme",
          "default": "scheme_1"
        },
        {
          "type": "header",
          "content": "Alignment settings"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "alignment_position",
          "label": "Desktop content position",
          "options": [
            {
              "value": "align-start justify-start",
              "label": "Top left"
            },
            {
              "value": "align-start justify-center",
              "label": "Top center"
            },
            {
              "value": "align-start justify-end",
              "label": "Top right"
            },
            {
              "value": "align-center justify-start",
              "label": "Middle left"
            },
            {
              "value": "align-center justify-center",
              "label": "Middle center"
            },
            {
              "value": "align-center justify-end",
              "label": "Middle right"
            },
            {
              "value": "align-end justify-start",
              "label": "Bottom left"
            },
            {
              "value": "align-end justify-center",
              "label": "Bottom center"
            },
            {
              "value": "align-end justify-end",
              "label": "Bottom end"
            }
          ],
          "default": "align-center justify-center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Slider"
    }
  ]
}
{% endschema %}
